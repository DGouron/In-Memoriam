{
  "name": "in-memoriam",
  "version": "1.0.0",
  "description": "Cartographie des décès militaires et civils Françaises",
  "main": "index.html",
  "repository": "https://github.com/Geolim4/In-Memoriam.git",
  "author": "Georges.L <contact@geolim4.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn run lint && npx tsc-bundle ./tsconfig.json && yarn run minify",
    "lint": "tslint --project ./tsconfig.json",
    "lint-fix": "tslint --project ./tsconfig.json --fix",
    "minify": "terser assets/js/dist/main.js -c -m -o assets/js/dist/main.js",
    "watch": "yarn run build && npm-watch"
  },
  "watch": {
    "build": {
      "extensions": "ts",
      "patterns": [
        "src/ts"
      ]
    }
  },
  "dependencies": {
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/googlemaps": "^3.37.0",
    "@types/markerclustererplus": "^2.1.33",
    "@types/node": "^12.6.8",
    "@types/qwest": "^1.7.28",
    "npm-watch": "^0.6.0",
    "terser": "^4.1.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript-bundle": "^1.0.16"
  }
}
